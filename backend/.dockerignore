# Don't overwrite vendor – we install it with composer in the image
/vendor
/node_modules

# Don't copy host's package discovery cache (lists dev-only Collision, etc.)
/bootstrap/cache/*
!/bootstrap/cache/.gitignore

# Git and IDE
.git
.gitignore
.idea
.vscode
*.swp
.env
.env.*

# Laravel – do not send symlink to Docker (breaks build on Windows)
/public/storage

# Laravel – avoid copying local caches/logs into image
/storage/*.key
/storage/logs/*
/storage/framework/cache/*
/storage/framework/sessions/*
/storage/framework/views/*
!/storage/logs/.gitkeep
!/storage/framework/cache/.gitkeep
!/storage/framework/sessions/.gitkeep
!/storage/framework/views/.gitkeep

# Tests and docs
/tests
.phpunit.result.cache
phpunit.xml
*.md
